{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block main %}
<div>
    <section class="login">
        <form class="form-login" method="post" action="{{ path('app_login') }}">
            {% if error %}
                <div class="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div>
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1>Please sign in</h1>
        
            <label for="username">Nom d'utilisateur</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" required autofocus>
            
            <label for="email">Email</label>
            <input type="email" value="{{ last_username }}" name="_username" id="email" autocomplete="email" required>
            
            <label for="password">Password</label>
            <input type="password" name="_password" id="password" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn" type="submit">Sign in</button>
            <a href="{{ path('app_inscription') }}">Inscription</a>
        </form>
        
    </section>
</div>
{% endblock %}

