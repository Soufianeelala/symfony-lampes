{% extends 'base.html.twig' %}

{% block title %}Ajouter une Lampe{% endblock %}

{% block main %}

<div class="ajout-lampe-container">
    <div class="ajout-lampe-card">
        <h1 class="ajout-lampe-title">Ajouter une nouvelle lampe</h1>
        
        {# Affichage des messages flash (succès ou erreur) #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        
        {# Formulaire d'ajout de lampe #}
        {{ form_start(form, {'attr': {'class': 'ajout-lampe-form'}}) }}
            <div class="form-group-ajout">
                {{ form_label(form.name, 'Nom de la lampe') }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group-ajout">
                {{ form_label(form.description, 'Description') }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group-ajout">
                {{ form_label(form.value, 'Prix (€)') }}
                {{ form_widget(form.value, {'attr': {'class': 'form-control'}}) }}
            </div>
            <button type="submit" class="btn btn-ajout">Ajouter</button>
        {{ form_end(form) }}
    </div>
</div>

{% endblock %}
